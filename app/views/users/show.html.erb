<% if @user.nil? %>
  <% provide(@title, 'Not found') %>
  No user with that ID has been found.
<% else %>
  <!-- Contents of your current show.html.erb -->
  <%# provide(@title, @user.name) %>
  <% @title = @user.name %>
  <div class="row">
    <aside class="span4">
      <section>
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
    </aside>
  </div>
  <%= @user.name %>, 
  <%= @user.email %>
<% end %>
